<Window x:Class="game.scoreboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:game"
        mc:Ignorable="d"
        Title="scoreboard" Height="450" Width="800">
    <Grid Background="#FF9BA2C7" Margin="0,0,0,-43">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="119*"/>
            <ColumnDefinition Width="603*"/>
            <ColumnDefinition Width="78*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Scoreboard" HorizontalAlignment="Left" Margin="38,24,0,0" VerticalAlignment="Top" FontSize="48" FontWeight="Bold" FontFamily="Wide Latin" Grid.Column="1"/>
        <Button Content=" Back" HorizontalAlignment="Left" Margin="23,24,0,0" VerticalAlignment="Top" Height="35" Width="94" FontSize="20" Click="backMain" Background="Black" Foreground="#FFFFFBFB"/>
        <ScrollViewer Grid.Column="1" Margin="0,98,0,0" FontSize="18">
            <TextBlock x:Name="results" Height="auto" Width="auto" Text=" " HorizontalAlignment="Center" FontSize="28"  />
        </ScrollViewer>
    </Grid>
</Window>
